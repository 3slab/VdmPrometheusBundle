{
  "name": "3slab/vdm-prometheus-bundle",
  "description": "Provide a metric endpoint to be pulled by Prometheus",
  "type": "symfony-bundle",
  "license": "proprietary",
  "authors": [
    {
      "name": "Jonathan Bouzekri",
      "email": "jonathan.bouzekri@suez.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Vdm\\Bundle\\PrometheusBundle\\": ""
    }
  },
  "require": {
    "php": ">=7.2",
    "symfony/framework-bundle": "^5.4|^6.4",
    "promphp/prometheus_client_php": "^2"
  },
  "require-dev": {
    "phpunit/phpunit": "^8",
    "squizlabs/php_codesniffer": "3.*",
    "symfony/yaml": "^5.4",
    "symfony/browser-kit": "^5.4"
  },
  "suggest": {
    "ext-redis": "Required if using Redis.",
    "ext-apc": "Required if using APCu."
  }
}
